<div class="col-lg-10 col-lg-offset-1">
	<h1 class="mb20">Model Edit</h1>
	<div class="well">
		<div class="form-group">
			<label>Name:</label>
			{{input class="form-control" type="text" value=model.name}}
		</div>
		<div class="form-group">
			<label>Visibility:</label>
			{{radio-button value=1 groupValue=model.visible }} Visible
			{{radio-button value=0 groupValue=model.visible }} Hidden
		</div>
		<div class="form-group">
			<label>Price:</label>
			{{input class="form-control" type="text" value=model.price}}
		</div>

		<div class="form-group">
			<label>Image url:</label>
			{{input class="form-control" type="text" value=model.image_url}}	
		</div>


		<div class="form-group" class="text-center">
			<img src="{{ model.image_url }}">	
		</div>
		<div class="form-group mt20">
			<label>Created by:</label>
			{{select-picker content=users
			       			value=model.created_by
			       			optionValuePath="content.id"
			       			optionLabelPath="content.first_name"}}
		</div>
		<p>
			<button {{action "update" model}} class="btn btn-success">Save</button>
			<button {{action "cancel" model}} class="btn btn-default">Cancel</button>
		</p>
	</div>
</div>